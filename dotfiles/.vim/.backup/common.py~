    @expose()
    def get_footer(self, *args, **kwargs):
        now = datetime.now()
        current_year = now.strftime('%Y')
        html = f"""
        <div class="copyright text-white" id="copyright">
            <a class="text-white" href="/privacy" target="_blank">Privacy policy</a>
            &copy; {current_year} Powered by
            <a class="text-white" href="http://www.rocketinsurtech.com" target="_blank">rocket insurtech</a>.
        </div>
        """
        return html

    def get_checkbox_active_boolean(self, active=True, *args, **kwargs):
        checked = 'checked' if active else ''
        html = f"""
        <div class="col-md-12">
            <div class="form-group row">
                <label class="col-3 col-form-label" for="active" required>Active</label>
                <div class="col-9">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="active" id="active" {checked}/>
                            <span class="form-check-sign"></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        """
        return html
