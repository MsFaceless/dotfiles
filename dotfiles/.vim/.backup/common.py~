        </div>
        """
        return html

######################################################################################
# Person Contact Form - Edit
######################################################################################

    @expose()
    def get_edit_member_contact_html(self, *args, **kwargs):
        entity_person_id = kwargs.get('entity_person_id')
        if not entity_person_id:
            redirect('/members/index')

        entity_person = EntityPerson.by_id(entity_person_id)
        if not entity_person:
            redirect('/members/index')

        dbase_query = EntityContact.by_attr_all('entity_id', entity_person.entity_id)

        outputlist = []
        img_active = "<img src='/images/icon_check.png' />"
        img_inactive = "<img src='/images/icon_cross.png' />"
        for item in dbase_query:
            item_id = item.id
            entity_contact_type_id = item.entity_contact_type_id
            entity_contact_type = TYPEUTIL.get_pretty_name('entity_contact_type', entity_contact_type_id)
            contact_value = item.value

            action = ""
            if entity_contact_type_id == MOBILE:
                action = f"""
                <div class='edit send_message action_link' contact_id='{item_id}' entity_id='{item.entity_id}'
                     entity_person_id='{entity_person_id}'  entity_contact_type='Sms' contact_value='{contact_value}'>Sms</div>

                <div class='edit send_message action_link' contact_id='{item_id}' entity_id='{item.entity_id}'
                     entity_person_id='{entity_person_id}' entity_contact_type='Whatsapp' contact_value='{contact_value}'>Whatsapp</div>
                """

            if entity_contact_type_id == EMAIL:
                action = f"""<div class='edit send_email action_link' contact_id='{item_id}' entity_id='{item.entity_id}'
                                entity_person_id='{entity_person_id}'  contact_value='{contact_value}'>Send Email</div>"""

            outputlist.append({
                'type': f"<div class='edit edit_contact' entity_id='{item.entity_id}'  entity_person_id='{entity_person_id}' contact_id='{item_id}'>{entity_contact_type}</div>",
                'value': contact_value,
                'preferred':  img_active if item.preferred else img_inactive,
                'action': action
            })
        dbcolumnlist = [
            'type',
            'value',
            'preferred',
            'action'
        ]
        theadlist = [
            'Type',
            'Value',
            'Preferred',
            ''
        ]
        tdclasslist = [
            'action_link',
            '',
            'text-center',
            'text-center',
        ]
        contacttable = build_html_table(outputlist, dbcolumnlist, theadlist, "contact_details", tdclasslist)
        html = f"""
        <div id= "div_contact_table">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row d-flex">
                                <div class="col-md-6">
                                    <h4 class="card-title">Contacts</h4>
                                </div>
                                <div class="col-md-6 text-right">
                                    <button id="create_new_contact" entity_person_id='{entity_person_id}'
                                            entity_id='{entity_person.entity_id}' class="btn btn-primary ml-auto">Create New Contact</button>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                {contacttable}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        """
        return html

