        kwargs['id'] = 'entity_person_title_id'
        kwargs['selected'] = selected
        outputlist = []
        dbase_query = DBSession.query(EntityPersonTitle). \
                filter(EntityPersonTitle.bln_active == True). \
                order_by(EntityPersonTitle.title.asc()). \
                all()
        for item in dbase_query:
            name = item.title.title()
            outputlist.append({
                'id' : item.id,
                'name' : name,
            })
        kwargs['outputlist'] = outputlist
        return create_selectbox_html(**kwargs)

