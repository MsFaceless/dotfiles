    def get_new_person_html(self, *args, **kwargs):
        card_title = kwargs.get('card_title', '')
        if card_title:
            card_title = f"""
            <div class="col-md-6">
                <h4 class="card-title">{card_title}</h4>
            </div>
            """
        back_button = kwargs.get('back_button', '')

        new_member_form = self.get_new_person_form(**kwargs)

        html = f"""
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex">
                        {card_title}
                        {back_button}
                    </div>
                    <div class="card-body">
                        {new_member_form}
                    </div>
                </div>
            </div>
        </div>
        """
        return html

    def get_new_person_form(self, *args, **kwargs):
        form_id = kwargs.get('form_id', 'form_new_member')
        form_inputs = self.get_person_form_inputs(**kwargs)
        form_class = kwargs.get('form_class', 'd-flex flex-wrap')
        return f"""
        <form id="{form_id}" class="{form_class}">
            {form_inputs}
        </form>
        """

    @expose()
    def get_edit_person_form(self, *args, **kwargs):
        entity_person_id = kwargs.get('entity_person_id', None)
        if not entity_person_id:
            log.warning('get_edit_person_form: Missing entity_person_id')
            return ''

        person = self.get_edit_person_form_data(**kwargs)
        kwargs['person'] = person

        form_id = kwargs.get('form_id', 'form_new_member')
        form_inputs = self.get_person_form_inputs(**kwargs)
        return f"""
        <form id="{form_id}" class="d-flex flex-wrap">
            {form_inputs}
        </form>
        """

    def get_edit_person_form_data(self, *args, **kwargs):
        entity_person_id = kwargs.get('entity_person_id', None)
        if not entity_person_id:
            log.warning('get_edit_person_form_data: Missing entity_person_id')
            return {}

        entity_person = EntityPerson.by_id(entity_person_id)
        if not entity_person:
            log.warning('get_edit_person_form_data: Missing entity_person')
            return {}

        title = EntityPersonTitle.by_id(entity_person.entity_person_title_id)
        language = Language.by_id(entity_person.language_id)
        person = {
            'firstname' : entity_person.firstname,
            'surname' : entity_person.surname,
            'preferred_name' : entity_person.preferred_name,
            'entity_id' : entity_person.entity_id,
            'entity_person_gender_type_id' : entity_person.entity_person_gender_type_id,
            'entity_person_gender_type_text' : TYPEUTIL.get_pretty_name('entity_person_gender_type', entity_person.entity_person_gender_type_id),
            'entity_person_title_id' : entity_person.entity_person_title_id,
            'entity_person_title_text' : title.title.title(),
            'language_id' : entity_person.language_id,
            'language_text' : language.name.title(),
            'date_of_birth' : entity_person.date_of_birth,
        }

        identity = EntityPersonIdentity.by_attr_first('entity_person_id', entity_person.id)
        if identity:
            person['identity_number'] = identity.value
            person['entity_person_identity_id'] = identity.id
            person['identity_type_id'] = identity.entity_person_identity_type_id
            person['identity_type_text'] = TYPEUTIL.get_pretty_name('entity_person_identity_type', identity.entity_person_identity_type_id)

        mobile_id = TYPEUTIL.get_id_of_name('entity_contact_type', 'mobile')
        mobile = DBSession.query(EntityContact). \
                filter(EntityContact.entity_id == entity_person.entity_id). \
                filter(EntityContact.entity_contact_type_id == mobile_id). \
                first()
        if mobile:
            person['entity_contact_type_id'] = mobile_id
            person['entity_contact_type_text'] = TYPEUTIL.get_pretty_name('entity_contact_type', mobile_id)
            person['mobile'] = mobile.value

        return person

    def get_person_form_inputs(self, *args, **kwargs):
        person = kwargs.get('person', None)

        form_id = kwargs.get('form_id', 'form_new_member')
        input_wrapper_class = kwargs.get('input_wrapper_class', 'col-md-6')
        extra_form_fields = kwargs.get('extra_form_fields', '')
        if extra_form_fields:
            extra_form_fields = f"""
            <div class="col-md-12">
                {extra_form_fields}
            </div>
            """
        extra_fields_dict = {
            'input_type': 'widget',
            'widget': extra_form_fields
            }

        default_selected = TYPEUTIL.get_id_of_name('entity_person_identity_type', 'identity_number')
        selected = int(person.get('identity_type_id', default_selected)) if person else default_selected
        identity_type_dict = {
            'input_wrapper_class': input_wrapper_class,
            'label_attrs': 'required',
            'input_id': 'identity_type_id',
            'label_val': _('Identity Type'),
            'input_type': 'custom',
            'input_field': self.get_selectbox_identity_type(**{'selected': selected, 'attributes': f'data-said-id="{selected}" data-length="{ID_NUMBER_LENGTH}"'})
            }

        identity_number = kwargs.get('identity_number', '')
        if person:
            identity_number = person.get('identity_number', '')

        id_number_dict = {
            'input_wrapper_class': input_wrapper_class,
            'label_attrs': 'required',
            'input_id': 'number',
            'label_val': _('ID Number'),
            'input_attrs': f'required maxlength="50" data-form-id="{form_id}"',
            'input_val': f'value="{identity_number}"'
            }

        intermediary_role_id = kwargs.get('intermediary_role_id', None)
        hidden_intermediary_role_dict = {
            'input_type': 'widget',
            'widget': get_hidden_input(**{'id': 'intermediary_role_id', 'value': intermediary_role_id}) if intermediary_role_id else ''
            }

        entity_person_id = kwargs.get('entity_person_id', None)
        hidden_entity_person_dict = {
            'input_type': 'widget',
            'widget': get_hidden_input(**{'id': 'entity_person_id', 'value': entity_person_id}) if entity_person_id else ''
            }

        redirect_url = kwargs.get('redirect_url', None)
        hidden_redirect_url_dict = {
            'input_type': 'widget',
            'widget': get_hidden_input(**{'id': 'redirect_url', 'value': redirect_url}) if redirect_url else ''
            }

        selected_title = person.get('entity_person_title_id', '') if person else ''
        title_dict = {
            'input_wrapper_class': input_wrapper_class,
            'label_attrs': 'required',
            'input_id': 'entity_person_title_id',
            'label_val': _('Title'),
            'input_attrs': 'required',
            'input_type': 'custom',
            'input_field': self.get_selectbox_person_title(selected_title)
            }
        first_name = person.get('firstname', '') if person else ''
        first_name_dict = {
            'input_wrapper_class': input_wrapper_class,
            'label_attrs': 'required',
            'input_id': 'name',
            'label_val': _('First Name'),
            'input_attrs': 'required maxlength="50"',
            'input_val': f'value="{first_name}"'
            }
        surname = person.get('surname', '') if person else ''
        surname_dict = {
            'input_wrapper_class': input_wrapper_class,
            'label_attrs': 'required',
            'input_id': 'surname',
            'label_val': _('Surname'),
            'input_attrs': 'required maxlength="50"',
            'input_val': f'value="{surname}"'
            }
        date_of_birth = person.get('date_of_birth', '') if person else ''
        dob_dict = {
            'input_wrapper_class': input_wrapper_class,
            'label_attrs': 'required',
            'input_id': 'date_of_birth',
            'label_val': _('Date of Birth'),
            'input_attrs': 'required',
            'input_val': f'value="{date_of_birth}"'
            }
        selected_gender = person.get('entity_person_gender_type_id', '') if person else ''
        gender_dict = {
            'input_wrapper_class': input_wrapper_class,
            'label_attrs': 'required',
            'input_id': 'entity_person_gender_type_id',
            'label_val': _('Gender'),
            'input_type': 'custom',
            'input_field': self.get_selectbox_gender_type(selected_gender)
            }
        selected_language = person.get('language_id', '') if person else ''
        language_dict = {
            'input_wrapper_class': input_wrapper_class,
            'label_attrs': 'required',
            'input_id': 'language_id',
            'label_val': _('Language'),
            'input_type': 'custom',
            'input_field': self.get_selectbox_language(selected_language)
            }
        mobile = person.get('mobile', '') if person else ''
        mobile_dict = {
            'input_wrapper_class': input_wrapper_class,
            'label_attrs': 'required',
            'input_id': 'mobile',
            'label_val': _('Mobile'),
            'input_attrs': 'required',
            'input_val': f'value="{mobile}"'
            }
        params_list = [
            extra_fields_dict,
            identity_type_dict,
            id_number_dict,
            hidden_intermediary_role_dict,
            hidden_entity_person_dict,
            hidden_redirect_url_dict,
            title_dict,
            first_name_dict,
            surname_dict,
            dob_dict,
            gender_dict,
            language_dict,
            mobile_dict
        ]
        javascript = """
        <script nonce='1234'>
            createDatepicker('#date_of_birth');
        </script>
        """
        return build_html_form_inputs(params_list) + javascript

######################################################################################
# Person Form - View
######################################################################################

    def get_member_view_items(self, *args, **kwargs):
        entity_person_id = kwargs.get('entity_person_id', None)
        if not entity_person_id:
            log.warning('get_member_view_items: No entity_person_id in kwargs')
            return ''

        person = self.get_edit_person_form_data(**kwargs)

        entity_person_identity_type_id = person.get('identity_type_id', None)
        id_type = TYPEUTIL.get_pretty_name('entity_person_identity_type', entity_person_identity_type_id)

        entity_person_identity_id = person.get('entity_person_identity_id', None)
        entity_person_identity = EntityPersonIdentity.by_id(entity_person_identity_id)
        identity_number = person.get('identity_number', '')


        firstname = person.get('firstname', '')
        surname = person.get('surname', '')
        fullname = f'{firstname} {surname}'
        title_id = person.get('entity_person_title_id', None)
        if title_id:
            title = EntityPersonTitle.by_id(title_id)
            if title:
                fullname = f'{title.title.title()} {firstname} {surname}'

        date_of_birth = person.get('date_of_birth', '')

        gender_id = person.get('entity_person_gender_type_id', None)
        gender = TYPEUTIL.get_pretty_name('entity_person_gender_type', gender_id)

        language_id = person.get('language_id', '')
        language = Language.by_id(language_id)

        mobile = person.get('mobile', '')
        html = f"""
            <h4 class="mt-3">{fullname}</h4>
            <hr>
            <div class="row d-flex align-items-center">
                <label class="col-md-4 col-form-label mb-0">Date of Birth</label>
                <div class="col-md-8">
                    {date_of_birth}
                </div>
            </div>
            <div class="row d-flex align-items-center">
                <label class="col-md-4 col-form-label mb-0">Identity type</label>
                <div class="col-md-8">
                    {id_type}
                </div>
            </div>
            <div class="row d-flex align-items-center">
                <label class="col-md-4 col-form-label mb-0">Identity number</label>
                <div class="col-md-8">
                    {identity_number}
                </div>
            </div>
            <div class="row d-flex align-items-center">
                <label class="col-md-4 col-form-label mb-0">Gender</label>
                <div class="col-md-8">
                    {gender}
                </div>
            </div>
            <div class="row d-flex align-items-center">
                <label class="col-md-4 col-form-label mb-0">Language</label>
                <div class="col-md-8">
                    {language.name}
                </div>
            </div>
        """
        return html

    def get_person_card(self, card_title=None, content=None, card_class="col-lg-6", *args, **kwargs):
        html = f"""
        <div class=" mb-3 {card_class}">
            <h4 class="mt-0">{card_title}</h4>
            {content}
        </div>
        """
        return html

