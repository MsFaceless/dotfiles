import requests
import json
from datetime import datetime

target = "https://gateway.calabashpay.co.za"
pub_target = f"{target}/notification/create_eiffelcorp_premium_ad"

def post_to_campus_user():
    data = {
        'username':'john20',
        'message':'a new notification',
        'amount':20,
    }
    r = requests.post(pub_target, json=data)
    return r

if __name__ == '__main__':
    response = post_to_campus_user()
    print(response.text)
