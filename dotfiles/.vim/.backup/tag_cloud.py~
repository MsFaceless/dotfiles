#!/bin/python

from pytagcloud import create_tag_image, make_tags
from pytagcloud.lang.counter import get_tag_counts

class TagCloud:

    def __init__(self, *args, **kwargs):
        self.text = kwargs.get('text', '')
        self.file_path = kwargs.get('file_path', 'wordcloud.png')

        self.maxsize = 120

    def generate(self, *args, **kwargs):
        if not self.text:
            return False

        counts = get_tag_counts(self.text.strip())
        print(counts)
        tags = make_tags(counts, maxsize = self.maxsize)
        print(tags)
        return True

if __name__ == "__main__":

    kwargs = {
        'text' : 'this is the text text texty text',
        'file_path' : 'test.png'
    }

    tc = TagCloud(**kwargs)
    result = tc.generate()
    print(result)
