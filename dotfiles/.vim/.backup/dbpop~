#!/bin/bash
mysql -u developer -pdeveloppass 'omvim2db' -e "drop table user_role" 
mysql -u developer -pdeveloppass 'omvim2db' -e "drop table role_permission" 
mysql -u developer -pdeveloppass 'omvim2db' -e "drop table user" 
mysql -u developer -pdeveloppass 'omvim2db' -e "drop table role" 
mysql -u developer -pdeveloppass 'omvim2db' -e "drop table permission" 
echo "Resetting database..." 
TABLES=$(mysql -u developer -pdeveloppass 'omvim2db' -e 'show tables' | awk '{ print $1}' | grep -v '^Tables' ) 
for t in $TABLES 
do 
    #echo "Deleting $t..." 
    mysql -u developer -pdeveloppass 'omvim2db' -e "drop table $t" 
done
