
$('#cancel_btn').click(function(){
    $('#login_modal').modal('hide');
});

$('#submit_login').click(function(){
    var formserial = getFormData('#login_form');
    $.post("/login_handler?", formserial, function(data){
        if(data === 'true'){
            var came_from = $('#login_form').attr('came_from');
            var full_path = window.location.origin + came_from;
            window.location = full_path;
        }else{
            showNotification('danger', data);
        };
        return false;
    });
});

$('#forgotPassword').click(function(){
    $("#login_modal").modal('hide');
    $('#dialogdiv').load('/useraccess/get_forgot_password_modal?', function(){
        return false;
    });
});

$('#password').keypress(function(event){
    if(event.keyCode == 13){
        $('#submit_login').click();
    }
});

var passwordField = $('#password');
var viewIcon = $('.view_password');

$(viewIcon).click(function(){
    var inputType = $(passwordField).attr('type');
    if (inputType == 'password'){
        $(passwordField).attr('type', 'text');
        $(viewIcon).removeClass('mdi-eye').addClass('mdi-eye-off');
        return 'false';
    } else if (inputType == 'text'){
        $(passwordField).attr('type', 'password');
        $(viewIcon).removeClass('mdi-eye-off').addClass('mdi-eye');
        return 'false';
    };
});
