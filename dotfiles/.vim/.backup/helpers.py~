# -*- coding: utf-8 -*-
"""Template Helpers used in rocket."""

import logging
from markupsafe import Markup
from datetime import datetime
from tg.util.html import script_json_encode

log = logging.getLogger(__name__)

try:
    from webhelpers2 import date, html, number, misc, text
except SyntaxError:
    log.error("WebHelpers2 helpers not available with this Python Version")

def current_year():
    now = datetime.now()
    return now.strftime('%Y')

def icon(icon_name):
    return Markup('<i class="glyphicon glyphicon-%s"></i>' % icon_name)

def branding_url():
    version = datetime.now().strftime("%d%H%M%S")
    url = f'/css/branding.css?{version}'
    return Markup(url)
