url: base_url/notification/get_calabash_campus_notifications_list
input: username
output: 'success' bln
        'seen' list
        'unseenlist' list

        each item in the seen and unseenlist ist:
            'added' : datetime,
            'message' : str,
            'notification_type': str,
            'notification_id' : int,
            'actions' : list,

                each item in the 'actions' list
                    'button_text' : str,
                    'callback_url' : str,

